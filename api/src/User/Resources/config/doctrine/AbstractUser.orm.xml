<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\User\Domain\Model\AbstractUser" inheritance-type="SINGLE_TABLE" table="users" repository-class="App\User\Infrastructure\Repository\UserRepository">

        <discriminator-map>
            <discriminator-mapping value="admin" class="App\User\Domain\Model\Admin" />
            <discriminator-mapping value="instructor" class="App\User\Domain\Model\Instructor" />
            <discriminator-mapping value="manager" class="App\User\Domain\Model\Manager" />
            <discriminator-mapping value="parent" class="App\User\Domain\Model\ParentUser" />
            <discriminator-mapping value="member" class="App\User\Domain\Model\Member" />
        </discriminator-map>

        <id name="id" type="uuid" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="username" column="username" type="string" length="255" nullable="false" />

        <embedded name="fullname" class="App\User\Domain\Model\FullName" />

        <embedded name="email" class="App\User\Domain\Model\EmailAddress" column-prefix="null" />

        <field name="password" column="password" type="string" length="255" nullable="false" />

        <field name="salt" column="salt" type="string" length="255" nullable="false" />

        <discriminator-column name="type" type="string" />

        <field name="createdAt" column="created_at" type="datetime" nullable="false" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="false" />
        <field name="deletedAt" column="deleted_at" type="datetime" nullable="true" />

    </entity>

</doctrine-mapping>
